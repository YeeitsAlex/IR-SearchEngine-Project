        function add_domain()
{
var current_q = document.getElementById('google-search-policy-q').value;
var count_q = document.getElementById('google-search-policy-q').value.length;

if (count_q > 0) {
var new_q = "site:legal.uncc.edu/policies " +  current_q;
document.getElementById('google-search-policy-q').value = new_q;
document.forms["google-search-policy"].submit();
} else {
return '';
}
}

function clearContents(element) {
  element.value = '';
}
       </script>
