                <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.js">
                </script>
                <script type="text/javascript">
                 jQuery(document).ready(function() {
    // show and/or hide the other field as needed
    jQuery("#other").click(function() {
      jQuery(".otherAmount").toggleClass("hidden");
    });
    jQuery("input[id^='GIFT_AMOUNT1_']").click(function() {
      jQuery(".otherAmount").addClass("hidden").val("0");
      jQuery("#other").val("0");
    });
    // add and/or clear the other amount field as needed
    jQuery("#otherAmount").change(function() {
      var otherValue = jQuery(this).val();
      jQuery("#other").val(otherValue);
    });

    // validate the form
    jQuery("#giving-form").validate({
      rules: {
          GIFT_AMOUNT1: { required: true },
          FUND1: { required: true },
      },
      messages: {
          GIFT_AMOUNT1: "Please enter an amount",
          FUND1: "Please choose a Fund and enter a dollar amount before submitting the form. Thank you.",
      },
      errorPlacement: function(error, element) {
          if (element.attr("name") == "GIFT_AMOUNT1") {
            error.insertBefore(jQuery(".fund-option"));
          }
          else if (element.attr("name") == "otherAmount") {
            error.insertBefore(jQuery(".fund-option"));
          }
          else {
            element.after(error);
          }
      },
      submitHandler: function(form) {
        if( jQuery("input[name='GIFT_AMOUNT1']:checked").val()!='' && jQuery("#FUND1").val()!='0') {
          // var giftamount1 = jQuery("input[name='GIFT_AMOUNT1']:checked").val();
          // alert(giftamount1);
          form.submit();
        } else {
          alert("Please choose a Fund and enter a dollar amount before submitting the form. Thank you.");
        }
      }
    });
  });
                </script>
