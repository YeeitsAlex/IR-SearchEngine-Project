<script>
 $(function() {
        var stickyHeaderTop = $('#page-nav').offset().top;


        $(window).scroll(function() {

            if ($(window).scrollTop() > stickyHeaderTop) {
                $("nav#page-nav ").removeClass("unstick ");
                $("nav#page-nav ").addClass("stick ");

            } else {
                $("nav#page-nav ").removeClass("stick ");
                $("nav#page-nav ").addClass("unstick ");
            }

        });
    });
</script>
