             <script>
              if ($(window).width() >= 768) {   
var $wn = $(window);
$wn.scroll(function(){
var sticky = $(".header-container-wrapper");
scroll = $wn.scrollTop();
if(scroll>150)sticky.addClass('sticky');
else
sticky.removeClass('sticky');
});    
};
             </script>
