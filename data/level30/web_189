   // <![CDATA[
$(document).ready(function(){
		function unifyHeights(divNameIsLike) {
		var $inputs = $('div[id*="'+ divNameIsLike + '"]');  // where type is 'div' an id is like 'pre-footer-cell-'
		var cellHeights = new Array;
	    	var prefooterIDs = new Array;
	 	var i = 0;
	 	var maxCellHeight = '';
		$inputs.each(function (index){
			prefooterIDs[i] = $(this).attr('id');
			cellHeights[i] = $(this).height();
			i++;
		})
		// get max cell height of prefooter cells
		var max_of_array = Math.max.apply(Math, cellHeights);
		// loop through all prefooter cells and set to max height found
			for (var i=0;i<(prefooterIDs.length / 2);i++){
			$('#' + prefooterIDs[i]).css('height', max_of_array); 
		}
	}
	// pass the id that is 'string within a string' that will work for all prefooter cells
    unifyHeights('pre-footer-cell-');
});
