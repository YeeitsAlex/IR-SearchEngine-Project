  <script>
   var update = new Date ();

function tick () {
	date = new Date ();
	elapsed = new Date (date - update);

	if (!document.all) {	// IE doesn't like this
		Clock = document.getElementById ("Clock");
	}
	Clock.innerHTML = date.toString () + 
	"<br>These data are " + elapsed.toUTCString().substring (17, 25) + " seconds old:";

	window.setTimeout ("tick ()", 1000);
}
  </script>
