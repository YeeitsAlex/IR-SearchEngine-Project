   <script type="text/javascript">
    $(function() {
      $('#extras .side-widget h3').each(function() { //h3
      	if ($(this).text() == 'Categories') { 
	   var div = '';
           $(this).next().children().each(function() {  //li
		var item = $(this).attr('class');
		$(this).children(':first-child').each(function() { //a
			var href = $(this).attr('href');
			if ($(this).next().length != 0) {
				div += '<h2 class="header ' + item + '">' + $(this).html() + '</h2><div class="section">';
				div += '<ul>' + $(this).next().html() + '</ul>';
			}
			else {
				div += '<h2 class="' + item + '"><a href="' + href + '">' + $(this).html() + '</a></h2><div class="section">';
			}
			div += '</div>';
		});
	   });
	   $(this).next().remove();
	   $(this).parent().append(div);
	}
    });
    $("#sidebar-accordion").accordion({ active: false, autoHeight: false, collapsible: true, navigation: true, header: ".header" });
  });
   </script>
