        <script>
         $(function() {
        var searchForm = $(".search-form");
        var searchFilterToggle = $(".search-filter-toggle", searchForm);
        var searchField = $(".search-field", searchForm);

        // Initialize focus
        searchField.on("focus blur", "input", function() {
            $(this).parents(".global-search").toggleClass("focus");
        }).find("input").focus();


        searchForm.on("click", ".dropdown-menu a:not(.direct-link)", function(e) {
            e.preventDefault();
            var text = $(this).text();
            var href = $(this).attr("href");
            if (href) {
                searchForm.find(".selected-text").text(text);
                searchForm.attr("action", href);
                searchForm.find(".dropdown-menu > .selected").removeClass("selected");
                searchField.focus();
                $(this).parent("li").addClass("selected");
            }

            if (searchFilterToggle) {
                var filter = $(this).data("filter");
                if (filter) {
                    searchFilterToggle.find("a").attr("href", filter);
                    searchFilterToggle.show();
                } else {
                    searchFilterToggle.hide();
                }
            }

            $(this).parents(".dropdown-container").removeClass("open");
        });
    });
        </script>
