    <div class="uu-container">
     <div class="uu-main-top row" id="uu-skip-target">
      <div class="uu-top-content">
       <div class="" id="ss">
        <div id="default_banner">
         <img alt="" height="577" src="/_images/front-banner.jpg" width="1237"/>
