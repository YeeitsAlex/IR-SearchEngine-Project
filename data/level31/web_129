              <script>
               $(document).ready(function(){
        $("input.search-field").bind('keyup', function() {
            if(isConceptFamily()){
                displayInput();
                populateInput();
            }
        });
        navigation();
        addActivatorToToolTip();
    });

    //Sets the width of the searchcontainer so it follows the width of the input
    $(window).resize(function () {
        $(".advanced-SearchBox-Container").width($('.field-button-wrapper').width());
    });

    /*Removes the popup if there is a click outside the container*/
    $(document).mouseup(function (e) {
        var container = $('.advanced-SearchBox-Container');
        if (!container.is(e.target) // if the target of the click isn't the container
            && container.has(e.target).length === 0) // ... nor a descendant of the container
        {
            container.addClass('hidden');
            resetSearchSelection();
        }
    });



    function populateInput() {
        $('.search-bar-wrapper input.search-field').each(function () {
            var inputValue = $(this);
            if(inputValue){
                $('.advanced-search-label').each(function () {
                    var lblText = $(this);
                    var urlParams = {};
                    

                    if (false) {
                        urlParams["improvedLayoutOrganisationUuid"] = "null";
                    }

                    //id of class
                    var searchBy = $(this).attr('id');
                    var familyUrl = $('.search-bar-wrapper ul.dropdown-menu li.selected').find('a').attr('href');

                    if(familyUrl == undefined){
                        familyUrl = '';
                    }

                    if(searchBy == 'CopyPaste'){
                        urlParams["text"] = inputValue.val();
                    }
                    else{
                        urlParams["search"] = inputValue.val();
                        urlParams["searchBy"] = searchBy;
                    }


                    var paramsAsString = jQuery.param(urlParams);

                    var indexOfParamStart = familyUrl.indexOf('?');
                    if (indexOfParamStart > -1) {
                        familyUrl = familyUrl.slice(0, indexOfParamStart);
                    }

                    var newUrl = familyUrl + "?" + paramsAsString;
                    if(searchBy == 'PartOfNameOrTitle') {
                        $('.linkValIndex').prop("href", newUrl);
                    }
                    if(searchBy == 'RelatedConcepts'){
                        $('.linkValConcept').prop("href", newUrl);
                    }

                    if(false){
                        var labelTextValue = subStringText(inputValue.val(), 25) + " ";
                        var isIE11 = !!navigator.userAgent.match(/Trident.*rv\:11\./);
                        if(isIE11){
                            lblText.text(labelTextValue);
                        }
                        else{
                            lblText.val(labelTextValue);
                        }

                    }

                    //hides the popup if input field is empty
                    if(inputValue.val().length == 0){
                        $(".advanced-SearchBox-Container").addClass("hidden");
                    }
                });

            }
        });
    }

    function displayInput() {
        $('.search-bar-wrapper input.search-field').each(function () {
            var selected = $('.search-bar-wrapper ul.dropdown-menu li.selected').find('a').attr('href');
            if (selected == undefined) {
                selected = 'searchAll';
            }
            if (true) {
                if (selected.indexOf('searchAll') != -1 || selected.indexOf('persons') != -1) {
                    $(".advanced-SearchBox-Container .copyPaste.hidden").removeClass("hidden");
                }
                else {
                    $(".advanced-SearchBox-Container .copyPaste").addClass("hidden");
                }
            }

            var inputValue = $(this);


            if (inputValue.val().length != 0) {
                $(".advanced-SearchBox-Container.hidden").removeClass("hidden");
            }
            else {
                $(".advanced-SearchBox-Container").addClass("hidden");
                resetSearchSelection();
            }
        });
    }

    function navigation(){



        $(".advanced-search-list li").mouseover(function() {
            $("li").removeClass("select");
            $(this).addClass("select");
        });

        $(document).bind("keydown", function (e) {
            if(isConceptFamily()) {
                $('.global-search.focus').removeClass("focus");

                if (e.keyCode == 38) { // up
                    $('input').blur();
                    var selected = $(".select");
                    $("li").removeClass("select");
                    e.preventDefault();
                    if (selected.prev().length == 0) {
                        selected.siblings().last().addClass("select");
                    } else {
                        selected.prev().addClass("select");
                    }
                }
                if (e.keyCode == 40) { // down or tab
                    $('input').blur();
                    e.preventDefault();
                    if (!$(this).hasClass('select')) {
                        $(".advanced-search-list li").last().addClass('select');
                    }
                    var selected = $(".select");
                    $("li").removeClass("select");

                    if (selected.next().length == 0) {
                        selected.siblings().first().addClass("select");
                    } else {
                        selected.next().addClass("select");
                    }
                }
                if(e.which === 13){
                    // enter
                    var copyPasteSelect = $("ul.advanced-search-list li.copyPaste").hasClass('select');
                    if(copyPasteSelect){
                        $('#copyPasteSubmit').click();
                    } else {
                        var url = $('.advanced-SearchBox-Container').find('.select a').attr('href');
                        if (url === undefined) {
                            $('#normalSearch').click();
                        }
                        else{
                            window.location.href = url;
                        }
                    }
                }
            }
        });
    }

    function isConceptFamily() {
        var conceptCheck = false;
        var selected = $('.search-bar-wrapper ul.dropdown-menu li.selected').find('a').attr('href');
        if (selected == undefined) {
            selected = 'searchAll';
        }
        
        var conceptFamilies = ['searchAll', 'persons', 'organisations', 'equipments', 'publications', 'projects', 'prizes'];
        $.each(conceptFamilies, function (index, value) {
            if (selected.indexOf(value) >= 0) {
                conceptCheck = true;
            }
        });
        return conceptCheck;
    }
    function subStringText(val, limit){
        if(val.length > limit){
            var dots = "...";
            val = val.substring(0, limit) + dots;

        }
        return val
    }

    var resetSearchSelection = function () {
        var select = $(".advanced-search-list li.select");
        select.removeClass('select');
    };
              </script>
