  <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js">
  </script>
  <script>
   $(function() {
        // =======================================
        // Content article accordions
        // =======================================

        $('.accordion').on('click', function() {
            $(this).toggleClass('active');
            var $label = $(this).find('.js-read-more-label');

            var panel = $(this).parent().prev();
            if (panel.css('max-height') != '0px') {
                panel.css('max-height', '0px');

                var moreText = 'Read more';
                if ($label.data('more')) {
                    moreText = $label.data('more');
                }
                $label.html('+ ' + moreText);
            }
            else {
                panel.css('max-height', panel.prop('scrollHeight') + 'px');

                var lessText = 'Read less';
                if ($label.data('less')) {
                    lessText = $label.data('less');
                }
                $label.html('- ' + lessText);
            }
        });
    });

    // =======================================
    // Submit Idea Grid
    // =======================================

    var $grid = $('.content-grid .grid');
    $grid.masonry({
        // set itemSelector so .grid-sizer is not used in layout
        itemSelector: '.grid-item',
        // use element for option
        columnWidth: '.grid-sizer',
        percentPosition: true,
        gutter: 10
    });
    $(".content-grid .filters input[type=checkbox]").on("click", checkFilter);

    function checkFilter() {
        $grid.children().not('.grid-sizer').hide();
        var f = '';
        $("input:checked").each(function() {
            f = f + $(this).val();
        });

        $grid.children('.grid-item').not('.stamp').not('.grid-sizer').each(function() {
            text = $(this).children('.tags').children('a').text();
            if (text.indexOf(f) >= 0) {
                $(this).show();
            }
        });
        $grid.masonry();
    }

    //
    // Submit Idea Grid Like Logic
    //

    // toggle like
    $('.content-grid .grid .likebox').click(function() {
        if ($(this).children('.no:visible').length > 0) {
            var slug = $(this).parent().attr('data-slug');

            localStorage.likes  = localStorage.likes + ' ' + slug;
            $(this).children('.yes').show();
            $(this).children('.no').hide();
                          var key = 'aad_' + slug;
              $.post("https://newmedia.osu.edu/api/upvote/votes", { subject: { key: key } });
                    }
    });

    // display past likes from localStorage
    $(document).ready(function() {
      localStorage.likes = localStorage.likes || "";

      $('.grid-item').each(function() {
        var $box = $(this).find('.likebox');
        if (localStorage.likes.indexOf($(this).attr('data-slug')) >= 0) {
          $box.removeClass('no').addClass('yes');
          $box.children('.yes').show();
          $box.children('.no').hide();
        }
      });
    });
  </script>
