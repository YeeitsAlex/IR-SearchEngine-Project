<script type="text/javascript">
 //Get active Crescendo page ID#
    var strSearch = location.search;  
    var intStart = strSearch.toLowerCase().search(new RegExp("pageid=")) + 7; 
    var intEnd = strSearch.indexOf("&", intStart);  
    var intID = 0;

    if (intEnd <= 0 || (intStart >= intEnd)){
      intID = strSearch.slice(intStart);
    }else{
      intID = strSearch.slice(intStart, intEnd);
    }
  
    // Gets rid of the border bottom on the images with links
    $('#cres_content a img').each(function(){
      $(this).parent().css({'border-bottom' : '0 none'});
    });
    
    //Breadcrumb changes  
    $('.breadcrumb').each(function() {
      var bc_text = $(this).html(); 
      bc_text = bc_text.replace(/&gt;/g, "&#187;");
      $(this).html(bc_text);  
    });
    
    // To replace the organizations title with ours
    var org_title = document.getElementById('page_title');
    var cres_title = document.getElementById('cres_content').getElementsByTagName("h1");
      
    if(cres_title.length) org_title.innerHTML = cres_title[0].innerHTML;
    
    // To add the right title to the My Account Page if main title has been replaced with the above code
    if(intID==99){
      var newTitle = jQuery("#page_title").html();
      newTitle = newTitle.replace("Account Login", "My Account");
      jQuery("#page_title").html(newTitle);
    }
</script>

