   (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
ga('create', 'UA-127074919-1', 'auto');
ga('send', 'pageview');
var getInnerText = function(node) {
        var txt = node.innerText;
        if (txt.trim() == '') {
            var imgs = node.querySelectorAll('img');
            if (imgs.length) {
                var alts = [];
                for (var i = 0; i < imgs.length; i++) {
                    alts.push(imgs[i].getAttribute('alt'));
                }
                return alts.join(', ');
            }
        }
        return txt;
    }
	var clickers = document.querySelectorAll('a');
    for (var i = 0; i < clickers.length; i++) {
        clickers[i].addEventListener('click', function(evt) {
			function track(v1, v2, v3) {
				console.log('GA debug', v1, v2, v3);
				ga(v1, v2, v3);
			}
			var anchor = evt.currentTarget;
			if (anchor.origin == window.location.origin) {
                track('send', 'event', {
                    eventCategory: 'Nav Link',
                    eventAction: 'click',
                    eventLabel: `${getInnerText(anchor)} (${window.location} => ${anchor.href})`,
                    transport: 'beacon'
                });
            } else {
                track('send', 'event', {
                    eventCategory: 'Outbound Link',
                    eventAction: 'click',
                    eventLabel: `${getInnerText(anchor)} (${window.location} => ${anchor.href})`,
                    transport: 'beacon'
                });
            }
		});
    }
  </script>
