 <script type="text/javascript">
  tips = new Array(3);
	tips[0] = 'Learn about Research Proposal Development Service (RPDS)';
	tips[1] = 'Find out if You\'re Eligible for Direct Support';
	tips[2] = 'Proposal Preparation Made Easier';
	function toolTip(i){
		clearToolTip();
		parent = document.getElementById("tdr_nav_content");
		tip = document.createElement('div');
		tip.setAttribute('id','nav_tooltip');
		tip.innerHTML = tips[i];
		parent.appendChild(tip);
	
	}
	function clearToolTip(){
		el = document.getElementById('nav_tooltip');
		if (el != null){
			el.parentNode.removeChild(el);
		}
	}
 </script>
