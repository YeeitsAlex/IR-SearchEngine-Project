                   <div class="region-inner clearfix">
                    <div class="block block-boxes block-boxes-os_boxes_html no-title" delta="1452969406" id="block-boxes-1452969406" module="boxes">
                     <div class="block-inner clearfix">
                      <div class="block-content content" ng-non-bindable="">
                       <div class="boxes-box" id="boxes-box-1452969406">
                        <div class="boxes-box-content">
                         <h3 style="text-align:center; padding:5px 0px 5px 0px; border-bottom-style:solid; border-bottom-width:1px; border-bottom-color:#6DBCDB">
                          <span style="color:#2c3e50">
                           RECENT POSTS
                          </span>
                         </h3>
