  <script>
   jQuery(window).load(function () {
    if(jQuery('#views_slideshow_cycle_teaser_section_frontpage_slider-block').length != 0){
    jQuery(window).resize(function () {
        jQuery('#views_slideshow_cycle_teaser_section_frontpage_slider-block img').each(function () {
            var img_height = jQuery(this).height(); 
            var caption_height = jQuery('.views-field-field-caption').height(); 
            if (img_height !== 0) {
                jQuery('#views_slideshow_cycle_teaser_section_frontpage_slider-block').height(img_height+caption_height+12);
                return false;
            }
        });
       
    });
  }
});

    jQuery(document).ready(function() {
      

      jQuery('#superfish-1').before('<div id=\"toggle-btn\">Menu</div>');
      jQuery('#toggle-btn').css('display','none');
      if(jQuery('#is-mobile').css('display') == 'inline'){
        jQuery('#superfish-1').css('display','none');
        jQuery('#toggle-btn').css('display','inline');
      }
      jQuery('#is-mobile').watch('display', function(){
        if(jQuery('#is-mobile').css('display') == 'inline'){
          jQuery('#toggle-btn').css('display','inline');
          jQuery('#superfish-1').css('display','none');
        }else{
          jQuery('#toggle-btn').css('display','none');
          jQuery('#superfish-1').css('display','inline');
        }
       });

      var roll = false;
      var menu = document.getElementById('toggle-btn');
      function startListening() {
        menu.addEventListener("click", rollCheck, false); 
      }
      
      function rollCheck() {
        if (roll) {
          rollUp();
        } else {
          rollDown();
        }
      }

      function rollDown() { 
        roll = true;
        var height = jQuery('#superfish-1').css('height');
        jQuery('#superfish-1').css('display','block');
        jQuery('#superfish-1').css('height','0px');
        jQuery('#superfish-1').animate({
          'height':height
          },'fast','swing',function(){
        });

      }
      
      function rollUp(){ 
        roll = false;
        var height = jQuery('#superfish-1').css('height');
        jQuery('#superfish-1').animate({
          'height':'0'
          },'fast','swing',function(){
            jQuery('#superfish-1').css('display','none');
            jQuery('#superfish-1').css('height',height);
        });
      }


      startListening();


    });

    (function(jQuery){
        
        jQuery.extend(jQuery.fn, {         
            
            /**
             * Watch Method
             * 
             * @param {String} the name of the properties to watch
             * @param {Object} options to overide defaults (only 'throttle' right now)
             * @param {Function} callback function to be executed when attributes change
             *
             * @return {jQuery Object} returns the jQuery object for chainability
             */   
            watch : function(props, options, callback){

                // Dummmy element
                var element = document.createElement('div');

                /**
                 * Checks Support for Event
                 * 
                 * @param {String} the name of the event
                 * @param {Element Object} the element to test support against
                 *
                 * @return {Boolean} returns result of test (true/false)
                 */
                var isEventSupported = function(eventName, el) {
                    eventName = 'on' + eventName;
                    var supported = (eventName in el);
                    if(!supported){
                        el.setAttribute(eventName, 'return;');
                        supported = typeof el[eventName] == 'function';
                    }
                    return supported;
                };

                // Type check options
                if(typeof(options) == 'function'){
                    callback = options;
                    options = {};
                }

                // Type check callback
                if(typeof(callback) != 'function')
                    callback = function(){};

                // Map options over defaults
                options = jQuery.extend({}, { throttle : 10 }, options);

                /**
                 * Checks if properties have changed
                 * 
                 * @param {Element Object} the element to watch
                 *
                 */
                var check = function(el) {
                    var data = el.data(),
                        changed = false,
                        temp;

                    // Loop through properties
                    for(var i=0;i < data.props.length; i++){
                        temp = el.css(data.props[i]);
                        if(data.vals[i] != temp){
                            data.vals[i] = temp;
                            changed = true;
                            break;
                        }
                    }
                    
                    // Run callback if property has changed
                    if(changed && data.cb)
                        data.cb.call(el, data);
                };

                return this.each(function(){
                    var el = jQuery(this),
                        cb = function(){ check.call(this, el) },
                        data = { props:props.split(','), cb:callback, vals: [] };
                    jQuery.each(data.props, function(i){ data.vals[i] = el.css(data.props[i]); });
                    el.data(data);
                    if(isEventSupported('DOMAttrModified', element)){
                        el.on('DOMAttrModified', callback);
                    } else if(isEventSupported('propertychange', element)){
                        el.on('propertychange', callback);
                    } else {
                        setInterval(cb, options.throttle);
                    }
                });
            }
        });
    })(jQuery);
  </script>
