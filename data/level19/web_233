      <section class="block block-views clearfix" id="block-views-news-block-5">
       <h2 class="block-title">
        News
       </h2>
       <div class="view view-news view-id-news view-display-id-block_5 news view-dom-id-025e8dda83f2bdb6a0262be5be5efa33">
        <div class="view-header">
         <div class="pull-right">
