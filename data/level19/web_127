  <script charset="utf-8" type="text/javascript">
   $(document).ready(function () {
            $('.flexslider').flexslider();

            var canvas = document.getElementById("weather-canvas");
            var briefs = document.getElementById("briefs-img-0");
            var width;
            var height;

            function resizeCanvas() {
                canvas.width = briefs.width;
                canvas.height = briefs.height;
                width = canvas.width;
                height = canvas.height;
            };

            
            var xOffset = 0;
            const spriteWidth = 288;
            const imgHeight = 192;
            const imgWidth = 17280;
            var canvasContext = canvas.getContext('2d');
            var weatherImage = new Image();
            var date = new Date();
            weatherImage.src = '/images/news/timpmovie.jpg?date=' + date.getTime();

            var changeFrame = function () {
                canvasContext.drawImage(weatherImage, xOffset, 0, spriteWidth, imgHeight, 0, 0, width, height);
                if (xOffset < imgWidth - spriteWidth) {
                    xOffset = xOffset + spriteWidth;
                }
                else {
                    xOffset = 0;
                }
            };

            weatherImage.onload = function () {
                window.setInterval(changeFrame, 100);
            };

            window.onload = function () {
                resizeCanvas();
            };
            
            $(window).resize(resizeCanvas);
        });
  </script>
