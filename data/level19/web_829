  <script>
   var featureSlideshows = function() {
			var events;

			$.getJSON( "https://calendar.uga.edu/api/2/events?type=110984&days=100&pp=10&recurring=false&featured=true", function( data ) {
				events = data.events;

				var date,
					title,
					link,
					location,
					image,
					description;

				var primaryEvents = events.slice(0,3);
				var secondaryEvents = events.slice(3);

				console.log(primaryEvents);
				console.log(secondaryEvents);

				var	output = "",
				items = [];

				$.each( primaryEvents, function( key, val ) {
					var event = val.event;

					date = event.event_instances[0].event_instance.start;
					title = event.title;
					link = event.localist_url;
					location = event.address;
					image = event.photo_url;
					description = event.description_text;

					var $eventHtml = '<div class="feature-slide"> \
						<div class="feature-content">\
							<h3 class="feature-title"><a href="' + link + '">' + title + '</a></h3>\
							<p>' + moment(date).format("dddd, MMM. D, YYYY h:mm a") + '</p>\
							<p>' + $.trim(description).substring(0, 120).split(" ").slice(0, -1).join(" ") + "&hellip;" + '</p>\
							<a class="stripe" href="' + link + '">Event Details</a>\
						</div>\
						<div class="feature-image" style="background-image: url(' + image + ');"></div>\
					</div>';
					items.push($eventHtml);
				});

				output = items.join('');

				$('#primary-slides').append(output).slick({
					autoplay: true,
					fade: true,
					slide: '.feature-slide',
					appendArrows: '#primary-pager',
					prevArrow: '<a class="prev">&larr;</a>',
					nextArrow: '<a class="next">&rarr;</a>'
				});

				var	output = "",
				items = [];

				$.each( secondaryEvents, function( key, val ) {
					var event = val.event;

					date = event.event_instances[0].event_instance.start;
					title = event.title;
					link = event.localist_url;
					location = event.address;
					image = event.photo_url;
					description = event.description_text;

					var $eventHtml = '<div class="feature-slide"> \
						<div class="feature-image" style="background-image: url(' + image + ');"></div>\
						<div class="feature-content">\
							<h3 class="feature-title"><a href="' + link + '">' + title + '</a></h3>\
							<p>' + moment(date).format("dddd, MMM. D, YYYY h:mm a") + '</p>\
							<p>' + $.trim(description).substring(0, 120).split(" ").slice(0, -1).join(" ") + "&hellip;" + '</p>\
							<a class="stripe" href="' + link + '">Event Details</a>\
						</div>\
					</div>';
					items.push($eventHtml);
				});

				output = items.join('');

				$('#secondary-slides').append(output).slick({
					autoplay: true,
					slide: '.feature-slide',
					dots: true,
					arrows: false,
					slidesToScroll: 1,
					slidesToShow: 2
				});
			});
		}
		
		$(function() {featureSlideshows();});
  </script>
 </body>
</html>
