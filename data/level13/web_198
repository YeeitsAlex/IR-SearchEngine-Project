<script type="text/javascript">
 $(document).ready(function () {
        //todo tests
        $.ajaxSetup({ cache: false });
        $.post('/BaseData/AddPageViewStatistics?uiPageType=Home');   
    });
    (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s);
        js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

    window.fbAsyncInit = function() {
        FB.init({
            appId: '1735274979823202',
            cookie: true, // enable cookies to allow the server to access
            // the session
            xfbml: true, // parse social plugins on this page
            version: 'v3.0' // use version 2.6
        });
    }

    function fb_login(redirectUrl) {
        FB.login(function(response) {
            if (response.authResponse) {
                var uid = response.authResponse.userID;
                var accessToken = response.authResponse.accessToken;
                var fs = 'fbAccountId=' + uid + '&fbToken=' + accessToken + '&returnUrl=' + redirectUrl;
                $.post('/SocialAuthorization/FacebookJs', fs, function(response) {
                    document.location.href = response;
                });
            } else {
                console.log('User cancelled login or did not fully authorize.');
            }
        }, { scope: 'email' });
    }

    function trackFbSignIn() {
                if(ga){ga('send', 'event', 'Sign In with Facebook', 'Sign In with Facebook', 'Facebook');}
    }

    //Mentor willing start
    function GetMentoringValues() {
        var willingParams = '';
        var count = 0;
        $('#mentoringWillings .chk').each(function() {
            willingParams += 'MentoringWillingChk[' + count + '].Id=' + $(this).val() + '&';
            willingParams += 'MentoringWillingChk[' + count + '].IsChecked=' + $(this).is(':checked') + '&';
            count++;
        });
        return willingParams;
    }

    function initMentoringWillings() {
        var uncheckedClass = "checkboxArea";
        var checkedClass = "checkboxAreaChecked";
        $('#chbMentor').bind("change", function() {
            var isChecked = $(this).is(':checked');
            $('#mentoringWillings .chk').each(function() {
                if (!isChecked) {
                    $(this).prop("checked", false);
                    $(this).prev().removeClass().addClass(uncheckedClass);
                } else {
                    $(this).prop("checked", true);
                    $(this).prev().removeClass().addClass(checkedClass);
                }
            });
        });

        $('#mentoringWillings .chk').bind("change", function() {
            var defMentorIsChecked = $('#chbMentor').is(":checked");
            var isMainMentorChecked = false;
            $('#mentoringWillings .chk').each(function() {
                var isChecked = $(this).is(':checked');
                if (isChecked) {
                    isMainMentorChecked = isChecked;
                }
            });
            if (defMentorIsChecked != isMainMentorChecked) {
                if (!isMainMentorChecked) {
                    $('#chbMentor').prop("checked", false);
                    $('#chbMentor').prev().removeClass().addClass(uncheckedClass);
                    $('#willingFlag').val(parseInt($('#willingFlag').val()) - parseInt($('#chbMentor').val()));
                } else {
                    $('#chbMentor').prop("checked", true);
                    $('#chbMentor').prev().removeClass().addClass(checkedClass);
                    $('#willingFlag').val(parseInt($('#willingFlag').val()) + parseInt($('#chbMentor').val()));
                }
            }

        });
    }
    //Mentor willing end

    // Cookie policy banner.
    var cookiePolicyBannerComponent = (function () {
        var keyCookiePolicy = 'shouldShowCookiePolicyBanner';
        var cookiePolicyBannerLink = null;
        var cookiePolicyBannerClose = null;
        var cookiePolicyBanner = null;

        function init() {
            cookiePolicyBannerLink = $('#cookiePolicyBannerLink');
            cookiePolicyBannerClose = $('#cookiePolicyBannerClose');
            cookiePolicyBanner = $('#cookiePolicyBanner');

            cookiePolicyBannerLink.click(approveCookiePolicy);
            cookiePolicyBannerClose.click(approveCookiePolicy);

            checkApproval();
        }

        function checkApproval() {
            if (shouldShowCookiePolicyBanner()) {
                cookiePolicyBanner.show();

                return;
            }

            cookiePolicyBanner.slideUp('slow');
        }

        function shouldShowCookiePolicyBanner() {
            if (localStorage && localStorage[keyCookiePolicy] === 'false') {
                return false;
            }

            localStorage[keyCookiePolicy] = true;

            return true;
        }

        function approveCookiePolicy() {
            localStorage.setItem(keyCookiePolicy, false);
            checkApproval();
        }

        return {
            init: init
        };
    })();
</script>

