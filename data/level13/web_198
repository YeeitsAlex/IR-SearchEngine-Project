  <script type="text/javascript">
   $(document).ready(function() {
              

                $('#Login').live('keypress', function(e) {
                    if (e.keyCode == 13) {
                        Validate();
                    }
                });
                $('#Password').live('keypress', function(e) {
                    if (e.keyCode == 13) {
                        Validate();
                    }
                });

                var timeoutCloseTooltip;
                $(".tooltip").find(".txt").bind("focus", function() {
                    $(this).addClass("focusField");
                });
                $(".tooltip").find(".txt").bind("blur", function() {
                    $(this).removeClass("focusField");
                });
                var tooltip = $("#sign-in").tooltip({
                    tip: "#sign-in-message",
                    effect: 'slide',
                    offset: [2, -115],
                    onShow: function() {
                        clearTimeout(timeoutCloseTooltip);
                        var tipD = tooltip.data('tooltip');
                        var tipH = this.getTip();
                        $(tipH).unbind('mouseleave');
                        $(tipH).bind("mouseleave", function() {
                            if (!$(".txt", this).hasClass("focusField")) {
                                tipD.hide();
                                $("#sign-in").removeClass("active");
                            };
                        });
                        $(tipH).unbind('mouseenter');
                        $(tipH).bind("mouseenter", function() {
                            clearTimeout(timeoutCloseTooltip);
                        });
                        $(document).bind('click', function(e) {
                            if ($(e.target).closest("#sign-in-message").length == 0) {
                                tipD.hide();
                                $(document).unbind('click');
                            };
                        });
                    },
                    onHide: function() {
                        BackToLoginPopup();
                        ClearLoginPopup();
                    },
                    delay: 500,
                    events: {
                        def: "'',''",
                        tooltip: "mouseenter, ''"
                    }
                }).dynamic({ bottom: { direction: 'down', bounce: true } });

                $("#sign-in").bind("mouseenter", function() {
                    clearTimeout(timeoutCloseTooltip);
                    $(tip).unbind('mouseleave');
                    tooltip.data("tooltip").hide();
                    var tip = $(this).data("tooltip");
                    if (tip) tip.show();
                });

                $("#sign-in").unbind("mouseleave");
                $("#sign-in").bind("mouseenter", function() {
                    clearTimeout(timeoutCloseTooltip);
                    var tip = $(this).data("tooltip");
                    if (tip) tip.show();
                });
                $("#sign-in").bind("mouseleave", function() {
                    var tip = $(this).data("tooltip");
                    timeoutCloseTooltip = setTimeout(go, 100)

                    function go() {
                        if (!$(".txt", tip).hasClass("focusField")) {
                            if (tip) tip.hide();
                        };
                    }
                });


                $("#forgot-lnk").click(function() {
                    $(".f1").hide();
                    $(".forgot-holder").show();
                    $(".f2 .txt").first().focus();
                    return false;
                });

                $("#get-pass").click(function() {
                    $('#ForgotPasswordError span').text('');
                    var email = $('#forgotEmail').val();
                    if (email != '' && email != 'Email') {
                        var isEmailValid = isValidEmailAddress(email);
                        if (isEmailValid) {
                            var model = { email: email };

                            $.ajax({
                                url: '/Account/SendForgotPassword',
                                contentType: "application/json",
                                dataType: 'json',
                                type: "POST",
                                data: JSON.stringify(model),
                                success: function(response) {
                                    if (!response.isSuccess) {
                                        if (response.error == 'Please click on Linkedin to login' || response.error == 'Please click on Facebook to login') {
                                            if (response.error == 'Please click on Linkedin to login') {
                                                $("#forgotPasswordSocialMes").html("You created your account using LinkedIn<br />Please click on the LinkedIn button to log back in.");
                                                $('#fLiButton').show();
                                            }

                                            if (response.error == 'Please click on Facebook to login') {
                                                $("#forgotPasswordSocialMes").html("You created your account using Facebook<br />Please click on the Facebook button to log back in.");
                                                $('#fFbButton').show();
                                            }

                                            $(".f2").hide();
                                            $("#socialForgotDiv").show();
                                        } else {
                                            $('#ForgotPasswordError span').text(response.error);
                                            $('#ForgotPasswordError span').show();
                                        }
                                    } else {
                                        $(".f2").hide();
                                        $(".f3").show();
                                    }
                                }
                            });
                        } else {
                            $('#ForgotPasswordError span').text('Enter valid email!');
                        }
                    }
                    return false;
                });

                //TOdo: this is temp hack
                setTimeout(function() {
                    $("#FakePassword").val('');
                }, 1);

            });

