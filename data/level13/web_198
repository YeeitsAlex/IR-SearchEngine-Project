  <script type="text/javascript">
   function BackToLoginPopup() {
            $(".f1, .f2").show();
            $(".forgot-holder, .f3").hide();
            $("#socialForgotDiv").hide();
            $('#ForgotPasswordError span').text('');
        }

        function ClearLoginPopup() {
            $('#clienterrors').hide();
            $('#ServerErrors span').hide();
            if (!$('#Login').hasClass('def-txt')) {
                $('#Login').addClass('def-txt');
            }
            // $('#Login').val('Email');
            if (!$('#FakePassword').hasClass('def-txt')) {
                $('#FakePassword').addClass('def-txt');
            }
            $('#FakePassword').val('Password');
            $('#FakePassword').show();
            $('#Password').hide();

            ClearForgotPasswordPopup();
        }

        function ClearForgotPasswordPopup() {
            $('#ForgotPasswordError span').text('');
            $('#forgotEmail').val('');
        }

        function isValidEmailAddress(emailAddress) {
            var pattern = new RegExp(/^((([a-z]|\d|[!#\$%&amp;&#39;\*\+\-\/=\?\^_`{\|}~]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])+(\.([a-z]|\d|[!#\$%&amp;&#39;\*\+\-\/=\?\^_`{\|}~]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])+)*)|((\x22)((((\x20|\x09)*(\x0d\x0a))?(\x20|\x09)+)?(([\x01-\x08\x0b\x0c\x0e-\x1f\x7f]|\x21|[\x23-\x5b]|[\x5d-\x7e]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(\\([\x01-\x09\x0b\x0c\x0d-\x7f]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]))))*(((\x20|\x09)*(\x0d\x0a))?(\x20|\x09)+)?(\x22)))@((([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])*([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])))\.)+(([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])*([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])))\.?$/i);
            return pattern.test(emailAddress);
        };

        function trackLiSignIn() {
                ga('send', 'event', 'Sign In with LinkedIn', 'Sign In with LinkedIn', 'LinkedIn');
        }

        window.addEventListener('storage', userLoggedIn, false);

        function userLoggedIn(event) {
            if (event.key === 'userLoggedIn') {
                window.localStorage.removeItem('userLoggedIn');
                window.location.reload();
            }
        }

        $('#FakePassword').focus(function () {
            $('#Password').val('');
            $(this).hide();
            $('#Password').show();
            $('#Password').focus();
        });

        $('#Password').blur(function () {
            if ($(this).val() == '') {
                $(this).hide();
                $('#FakePassword').show();
            }
        });

        function Validate(e) {
            if (e) { e.preventDefault(); }
            var model = { email: $('#loginForm #Login').val() };

            $.ajax({
                url: '/Admin/login/islockeduser',
                contentType: "application/json",
                dataType: 'json',
                type: "POST",
                data: JSON.stringify(model),
                success: function (data) {
                    if (data.isLockedUser) {
                        $('#ServerErrors span').text(data.error);
                        $('#ServerErrors span').show();
                    } else {
                        tryLogin();
                    }
                },
                async: false
            });
        }

        function tryLogin(parameters) {
            var form = $('#loginForm');
            if (form.valid()) {
                $.post("/Account/LoginCandidateByEmail", form.serialize(), function (response) {
                    if (!response.isSuccess && !response.isFullPending && !response.isDeny) {
                        $('#ServerErrors span').text(response.error);
                        $('#ServerErrors span').show();
                    } else if (!response.isSuccess && response.isFullPending) {
                        loadPopup('pendingDenyPopup');
                    } else if (!response.isSuccess && response.isDeny) {
                        loadPopup('denyUserPopup');
                    }
                    else {
                        window.location.assign(response.redirectUrl);
                    }
                });
            } else {
                $('#clienterrors').show();
            }
        }

        $(document).ready(function () {
            cookiePolicyBannerComponent.init();
        });
  </script>
