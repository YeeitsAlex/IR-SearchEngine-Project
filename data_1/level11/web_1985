	function formatDate (theDate) {
		var rawDate = new Date(theDate);
		var month = rawDate.getMonth() + 1;
		var monthDay = rawDate.getDate();
		var year = rawDate.getFullYear().toString();
		var thisDate = month + "." + monthDay + "." + year.substring(2,4);
		return thisDate;
	}

	// Our callback function, for when a feed is loaded.
	function feedLoaded(result) {
		if (!result.error) {
			// Grab the container we will put the results into
			// var container = jQuery('#blog_feed');

			// Loop through the feeds, putting the titles onto the page.
			// Check out the result object for a list of properties returned in each entry.
			// http://code.google.com/apis/ajaxfeeds/documentation/reference.html#JSON
			if (result.feed.entries.length > 0) {
				var feedListItems = '<ul>';
				for (var i = 0; i < result.feed.entries.length; i++) {
					var entry = result.feed.entries[i];
					var pubDate = formatDate(entry.publishedDate);
					feedListItems += '<li><h3>' + pubDate + ' — ' + '<a href="' + entry.link + '">' + entry.title + '<span class="external"></span></a></h3>';
					feedListItems += '<p>' + Encoder.htmlDecode(entry.contentSnippet) + '</p>';
					feedListItems += '</li>';
				}
				feedListItems += '</ul>';
				jQuery('#blog_feed').html(feedListItems);
			}
		}
	}

	jQuery(document).ready(function() {
		// Create a feed instance that will grab the feed.
		var feed = new google.feeds.Feed("http://blogs.ucdavis.edu/sustainability/feed/");
		feed.setNumEntries(10);

		// Calling load sends the request off. It requires a callback function.
		feed.load(feedLoaded);
	});
//]]> -->
