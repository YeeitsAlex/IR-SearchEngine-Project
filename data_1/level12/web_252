}
.ui-state-highlight {
	background: #C0C0C0;
	height: 175px;
	line-height: 175px;
	border-radius: 0 10px 0 10px;
}

#sortable li{
	margin: 40px 0;

}

#menu img{
	margin-top: 5px;
	cursor: pointer;
}
#menubar img{
    width: 25px;
    margin-top: 15px;
}
#menu span{
	margin-left: 10px;
	color: #9B9A9A;
	cursor: pointer;
}
#widgetSelect li{
