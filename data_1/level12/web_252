     <script type="text/javascript">
      var $j = jQuery.noConflict();

	$j(function() {
		$j( "#sortable" ).sortable({
			placeholder: "ui-state-highlight",
        	update: function(){
        		var idsInOrder = $j("#sortable").sortable('toArray');
        		setCookie('widgetOrder',idsInOrder,90);
        	}
		});

   			//$j( "#sortable" ).disableSelection(); //was messing up the conversions widget selection.
	});



	var widgetArray = ['News','Weather','Downloads','Convert']; //list of all our widgets.
	var widgetCookie = getCookie('widgetOrder');

	//If the widget cookie is not set then these are the default widgets.
	if(widgetCookie == ""){
		widgetCookie = ['news','weather','downloads'];
		setCookie('widgetOrder',widgetCookie,90);

	}else{
		widgetCookie = widgetCookie.split(',');
	}

	$j(document).ready(function(){
		//Sets all the checkboxes based on what widgets we have.
		//It checks the widgets that are currently set.
		for(var i = 0; i < widgetArray.length; i++){
			var ischecked = "";
				if(widgetCookie.indexOf(widgetArray[i].toLowerCase()) > -1){
					ischecked = "checked";
				}
			$j('#widgetSelect').append('<li><input name="widget_check" class="widgetCheck" value="'+widgetArray[i]+'" type="checkbox" '+ischecked+'/><label>'+widgetArray[i]+'</label></li>')
		}

		//This creates a list item within the 'sortable' ul.
		//It sets the items based on what the widgetCookie says is set.
		//It also loads the php for the each widget.
		var count = 0;

		for(var j = 0; j < widgetCookie.length; j++){
			var idValue = widgetCookie[count];
			$j('#sortable').append('<li id="'+idValue+'" class="ui-state-default"></li>');
			$j('#sortable li#'+idValue).load('/includes/widgets/'+idValue+'_widget.php');
			count++;
		}

        $j('#widgetSelect > li').hide();

        //Toggles the collapsible elements.
        $j('#menu > #menubar').click(function () {
            $j(this).parent().find('li').each(function(){
                    $j(this).toggle();
            });
        });

        //This adds and removes widgets and changes the cookie file.
        $j('.widgetCheck').change(function(){
        	var widgetID = $j(this).val().toLowerCase();

        	if($j(this).is(':checked')){

        		widgetCookie.splice(0,0,widgetID);
        		setCookie('widgetOrder',widgetCookie,90);

        		$j('#sortable').prepend('<li id="'+widgetID+'" class="ui-state-default"></li>');
				$j('#sortable li#'+widgetID).load('/includes/widgets/'+widgetID+'_widget.php');

        	}else{
        		//Make sure at least one widget is selected.
        		if(widgetCookie.length == 1){
        			$j(this).prop('checked', true);
        			alert("You must have at least one widget selected.");
        			return;
        		}

        		var orderIndex = widgetCookie.indexOf(widgetID);
        		widgetCookie.splice(orderIndex,1);
        		setCookie('widgetOrder',widgetCookie,90);

        		$j("#"+widgetID).remove();
        	}
		});
    });
     </script>
