  <script>
   function defaultHeight() {
    var $alturaDo = $(".orbit-container").height();
    var $alturaVentanaDo = $(window).height();

    if($alturaVentanaDo < $alturaDo){
        $(".orbit-bullets").css({
            height: $alturaVentanaDo
         });
     }else{
        $(".orbit-bullets").css({
            height: $alturaDo
         });
     }
}
function resizeWindow() {
    var $altura = $(".orbit-container").height();
    var $alturaVentana = $(window).height();
    var $diferencia = $(".header-section").height();

    $(".header-section").css({
        height: $altura
     });
    $(".page-scroll").css({
        height: $altura
     });

     if($alturaVentana < $altura){
        $(".orbit-bullets").css({
            height: $alturaVentana
         });
     }else{
        $(".orbit-bullets").css({
            height: $altura
         });
     }  
}
  </script>
