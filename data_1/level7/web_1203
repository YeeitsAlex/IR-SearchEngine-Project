  <script>
   $(document).ready(function() {
            $('#audienceTabs a:first').tab('show')
            $("div[id^='dual-price']").removeClass(" show ").addClass(" hidden ")
            $("div[id^='single']").removeClass(" hidden ").addClass(" show ")

            var checkboxes = $("input[type='checkbox']");

                        $("input[id^='spouse']" ).change(function() {
                if (this.checked) {
                    checkboxes.prop('checked', true)
                    $("div[id^='dual-price']").removeClass(" hidden ").addClass(" show ")
                    $("div[id^='single']").removeClass(" show ").addClass(" hidden ")
                }
                else{
                    checkboxes.prop('checked', false)
                    $("div[id^='dual-price']").removeClass(" show ").addClass(" hidden ")
                    $("div[id^='single']").removeClass(" hidden ").addClass(" show ")
                }
            });
        })
  </script>
